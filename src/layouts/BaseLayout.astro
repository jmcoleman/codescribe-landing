---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "CodeScribe AI - AI-Powered Documentation Generator",
  description = "Transform code into production-ready documentation with AI quality scoring, multi-file analysis, and GitHub integration. Support for 16 languages."
} = Astro.props;

const siteUrl = "https://codescribeai.com";
const ogImage = `${siteUrl}/og-image.png`;

const softwareAppSchema = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": "CodeScribe AI",
  "description": "AI-powered documentation generator that transforms code into production-ready docs with quality scoring, multi-file analysis, and GitHub integration.",
  "url": siteUrl,
  "applicationCategory": "DeveloperApplication",
  "operatingSystem": "Web",
  "offers": [
    { "@type": "Offer", "price": "0", "priceCurrency": "USD", "name": "Free" },
    { "@type": "Offer", "price": "49", "priceCurrency": "USD", "name": "Pro" },
    { "@type": "Offer", "price": "199", "priceCurrency": "USD", "name": "Team" }
  ],
  "featureList": [
    "16+ programming languages supported",
    "AI quality scoring",
    "Multi-file analysis",
    "GitHub integration",
    "Zero code retention",
    "Sensitive data detection",
    "Real-time streaming"
  ]
};

const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "CodeScribe AI",
  "url": siteUrl,
  "logo": `${siteUrl}/logo.svg`,
  "description": "AI-powered documentation generator for development teams.",
  "contactPoint": {
    "@type": "ContactPoint",
    "contactType": "customer support",
    "url": "https://app.codescribeai.com/contact"
  }
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- OpenGraph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content="CodeScribe AI" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <link rel="canonical" href={siteUrl} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(softwareAppSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
  </head>
  <body class="bg-white dark:bg-slate-900 text-slate-900 dark:text-slate-100">
    <slot />
    <script>
      // Handle page scroll on load/refresh
      if ('scrollRestoration' in history) {
        history.scrollRestoration = 'manual';
      }

      // Check for hash in URL and scroll to that section, otherwise scroll to top
      const hash = window.location.hash;
      if (hash) {
        setTimeout(() => {
          const element = document.querySelector(hash);
          if (element) {
            element.scrollIntoView({ behavior: 'smooth', block: 'start' });
          }
        }, 100);
      } else {
        window.scrollTo(0, 0);
      }
    </script>
  </body>
</html>
