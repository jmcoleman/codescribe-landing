---
// Simple navigation bar
const appUrl = import.meta.env.PUBLIC_APP_URL || 'https://app.codescribeai.com';
---

<nav class="sticky top-0 z-50 bg-slate-900/95 backdrop-blur-sm border-b border-slate-800">
  <div class="max-w-7xl mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo/Brand -->
      <a href="/" class="flex items-center gap-3 text-white font-bold text-xl hover:text-purple-400 transition-colors group">
        <img src="/logo.svg" alt="CodeScribe AI" class="w-8 h-8 group-hover:scale-110 transition-transform" />
        <span>CodeScribe AI</span>
      </a>

      <!-- Nav Links -->
      <div class="hidden md:flex items-center gap-8">
        <a href="#features" class="text-slate-300 hover:text-white transition-colors text-sm font-medium">
          Features
        </a>
        <a href="#pricing" class="text-slate-300 hover:text-white transition-colors text-sm font-medium">
          Pricing
        </a>
        <a href={`${appUrl}/privacy`} target="_blank" rel="noopener noreferrer" class="text-slate-300 hover:text-white transition-colors text-sm font-medium">
          Privacy
        </a>
      </div>

      <!-- CTA Buttons -->
      <div class="flex items-center gap-3">
        <a
          href={`${appUrl}/login`}
          class="hidden sm:inline-block px-4 py-2 text-slate-300 hover:text-white transition-colors text-sm font-medium"
        >
          Log In
        </a>
        <a
          href={appUrl}
          class="hidden sm:inline-block px-4 py-2 text-purple-400 hover:text-purple-300 transition-colors text-sm font-medium"
        >
          Try it free
        </a>
        <a
          href={`${appUrl}/signup`}
          class="px-5 py-2 bg-purple-500 hover:bg-purple-600 text-white rounded-lg text-sm font-semibold transition-colors shadow-lg shadow-purple-500/20"
        >
          Sign Up
        </a>
      </div>
    </div>
  </div>
</nav>
