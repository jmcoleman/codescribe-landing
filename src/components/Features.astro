---
import { features } from '../data/features';
---

<section id="features" class="py-20 sm:py-24 bg-slate-950">
  <div class="max-w-7xl mx-auto px-6">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-4xl sm:text-5xl font-bold text-white mb-4">
        Stop Writing Docs. <span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-purple-300">Start Shipping Code.</span>
      </h2>
      <p class="text-lg text-slate-400">
        Everything you need to generate professional documentation at scale
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-6 lg:gap-8">
      {features.map((feature, index) => (
        <div class="group relative p-8 bg-gradient-to-br from-slate-800 to-slate-800/50 border border-slate-700 rounded-2xl shadow-lg hover:shadow-2xl hover:shadow-purple-500/20 transition-all duration-300 hover:-translate-y-1 hover:border-purple-500/50">
          <!-- Gradient overlay on hover -->
          <div class="absolute inset-0 rounded-2xl bg-gradient-to-br from-purple-500/0 to-purple-600/0 group-hover:from-purple-500/5 group-hover:to-purple-600/10 transition-all duration-300"></div>

          <div class="relative">
            <!-- Neutral icon -->
            <div class="inline-flex items-center justify-center w-12 h-12 bg-slate-700/50 text-slate-300 rounded-xl mb-5 group-hover:scale-110 transition-transform duration-300">
              {index === 0 && (
                <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              )}
              {index === 1 && (
                <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                </svg>
              )}
              {index === 2 && (
                <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                </svg>
              )}
              {index === 3 && (
                <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                </svg>
              )}
            </div>

            <h3 class="text-2xl font-bold text-white mb-3">{feature.title}</h3>
            <p class="text-slate-300 mb-6 leading-relaxed">{feature.description}</p>

            <ul class="space-y-3">
              {feature.features.map(item => (
                <li class="flex items-start gap-3 text-slate-300">
                  <svg class="w-5 h-5 text-slate-400 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-sm">{item}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
