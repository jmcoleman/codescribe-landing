---
// Hero section with CTA buttons and trust signals
const appUrl = import.meta.env.PUBLIC_APP_URL || 'https://app.codescribeai.com';
---

<section class="relative overflow-hidden bg-slate-900 py-24 sm:py-32">
  <!-- Background decoration -->
  <div class="absolute inset-0 overflow-hidden" aria-hidden="true">
    <div class="absolute -top-40 -right-40 w-80 h-80 bg-purple-900/30 rounded-full mix-blend-soft-light filter blur-3xl opacity-40 animate-blob"></div>
    <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-purple-800/30 rounded-full mix-blend-soft-light filter blur-3xl opacity-40 animate-blob animation-delay-2000"></div>
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-80 h-80 bg-purple-900/20 rounded-full mix-blend-soft-light filter blur-3xl opacity-40 animate-blob animation-delay-4000"></div>
  </div>

  <div class="relative max-w-6xl mx-auto px-6">
    <div class="text-center max-w-4xl mx-auto pt-8">
      <h1 class="relative z-10 text-5xl sm:text-6xl lg:text-7xl font-bold text-white mb-6 leading-tight">
        Transform Code Into
        <span class="block text-transparent bg-clip-text bg-gradient-to-r from-purple-400 via-purple-300 to-purple-400">
          Production-Ready Docs
        </span>
      </h1>

      <p class="text-xl sm:text-2xl text-slate-300 mb-10 leading-relaxed max-w-3xl mx-auto">
        AI-powered documentation with quality scoring, multi-file analysis, and GitHub integration.
        <span class="font-semibold text-slate-200">16 languages. Zero storage.</span>
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-4">
        <a
          href={appUrl}
          class="group px-10 py-5 bg-gradient-to-r from-purple-500 to-purple-600 hover:from-purple-600 hover:to-purple-700 text-white text-lg rounded-xl font-bold shadow-2xl shadow-purple-500/30 transition-all duration-200 hover:scale-105 hover:shadow-purple-500/40 flex items-center gap-2"
        >
          Start Free
          <svg class="w-6 h-6 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
        <button
          id="demo-btn"
          class="px-6 py-3 text-slate-300 rounded-xl font-medium border border-slate-600 hover:border-purple-500 hover:text-white transition-all duration-200 flex items-center gap-2"
        >
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          Watch Demo
        </button>
      </div>
      <p class="text-sm text-slate-400 mb-8">
        Or <a href={`${appUrl}/signup`} class="text-purple-400 hover:text-purple-300 transition-colors">create a free account</a> to save your docs and unlock more features.
      </p>

      <!-- Trust signals -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mt-16 pt-8 border-t border-slate-700">
        <div class="flex flex-col items-center gap-2">
          <div class="text-2xl font-bold text-purple-400">4,632</div>
          <div class="text-sm text-slate-400">Automated Tests</div>
        </div>
        <div class="flex flex-col items-center gap-2">
          <div class="text-2xl font-bold text-purple-400">100/100</div>
          <div class="text-sm text-slate-400">Accessibility Score</div>
        </div>
        <div class="flex flex-col items-center gap-2">
          <div class="text-2xl font-bold text-purple-400">Zero</div>
          <div class="text-sm text-slate-400">Code Retention</div>
        </div>
        <div class="flex flex-col items-center gap-2">
          <div class="text-2xl font-bold text-purple-400">16+</div>
          <div class="text-sm text-slate-400">Languages</div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Demo Video Modal -->
<div id="demo-modal" class="fixed inset-0 bg-black/60 z-50 hidden flex items-center justify-center p-4">
  <div class="relative">
    <!-- Close Button -->
    <button
      id="close-modal"
      class="absolute -top-12 right-0 text-white hover:text-purple-400 transition-colors"
      aria-label="Close demo"
    >
      <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>

    <!-- Video Container -->
    <div class="relative rounded-xl overflow-hidden border-2 border-slate-300 shadow-2xl shadow-purple-400/50 bg-slate-800">
      <video
        id="demo-video"
        class="block"
        style="width: 75vw; max-height: 75vh;"
        controls
        preload="metadata"
      >
        <source src="/python-demo-short.mp4" type="video/mp4" />
        Your browser does not support the video tag.
      </video>
    </div>
  </div>
</div>

<script>
  const demoBtn = document.getElementById('demo-btn');
  const demoModal = document.getElementById('demo-modal');
  const closeModal = document.getElementById('close-modal');
  const demoVideo = document.getElementById('demo-video') as HTMLVideoElement;

  // Open modal
  demoBtn?.addEventListener('click', () => {
    demoModal?.classList.remove('hidden');
    demoModal?.classList.add('flex');
    demoVideo?.play();
  });

  // Close modal
  const closeModalFn = () => {
    demoModal?.classList.add('hidden');
    demoModal?.classList.remove('flex');
    demoVideo?.pause();
    demoVideo.currentTime = 0;
  };

  closeModal?.addEventListener('click', closeModalFn);

  // Close on backdrop click
  demoModal?.addEventListener('click', (e) => {
    if (e.target === demoModal) {
      closeModalFn();
    }
  });

  // Close on ESC key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && !demoModal?.classList.contains('hidden')) {
      closeModalFn();
    }
  });
</script>

<style>
  @keyframes blob {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    33% {
      transform: translate(30px, -50px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
  }

  .animate-blob {
    animation: blob 7s infinite;
  }

  .animation-delay-2000 {
    animation-delay: 2s;
  }

  .animation-delay-4000 {
    animation-delay: 4s;
  }
</style>
